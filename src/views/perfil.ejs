<DOCTYPE html>
  <html lang="en">
    <head>
      <meta charset="UTF-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />

      <link rel="stylesheet" href="../css/perfilPage.css"/>
      <link rel="stylesheet" href="../css/style.css"/>
      <title>Adoção Legal</title>
    </head>

    <body>
      <%- include('./partials/header') %>

      <main id="conteudo">
        <section id="Tema">Tema</section>
        <!--imagem do pefil e opções(coluna esquerda)-->
        <section id="content">
          <section class="perfil">

            <img src="../img/sem-foto.jpg" alt="perfil-pet" />
            <ul>
              <li><%= user.nome %></li>
              <li><%= user.email %></li>
              <li><%= user.genero %></li>
              <li><%= user.cpf %></li>
            </ul>

          </section>
          <% user.Animal.forEach((animais)=>{ %>
            <div id="card">
              <h2 id="Nome do pet"> <li> <%=animais.nome %></li> </h2>

              <div class="infoPerfil">
                <aside>
                  <img
                    class="perfil-img"
                    src="../img/sem-foto.jpg"
                    alt="fot de perfil-pet"
                  />
                  <ul class="infoPerfil-pet">
                    
                    <li><%= animal.raca %></li>
                    <li><%= animal.porte %></li>
                    <li><%= animal.tipo %></li>               
                    <li><%= animal.pelagem %></li>
                    <li>
                      <form method="get" action="/anuncio">
                        <input type="hidden" name="animal" value="<%= animal.id %>">
                  
                        <button type="submit">Doar!</button>
                      </form>
                    </li>
                 </ul>
                </aside>
                <% animal.Fotos.forEach((fotos)=>{ %>
                <div class="photo-card">
                  <img
                  class="perfil-img"
                  src="<%= fotos.caminho %><%= fotos.nome %>"
                  alt="perfil-pet"
                  />
                </div>
                <% }) %>
            </div>
          </div>
          <% }) %>

          <section id="customProfile">
            <ul>
                <li>opçõesDoPerfil1</li>
                <li>opçõesDoPerfil2</li>
                <li><a href="/doando/pet">Doe seu pet!</a></li>
              </ul>
          </section>
        </section>
      </main>

      <%- include('./partials/footer') %>
      
    </body>
  </html>
</DOCTYPE>
