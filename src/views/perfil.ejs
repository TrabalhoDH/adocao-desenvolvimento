<DOCTYPE html>
  <html lang="en">
    <head>
      <meta charset="UTF-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />

      <link rel="stylesheet" href="../css/perfilPage.css"/>
      <link rel="stylesheet" href="../css/style.css"/>
      <title>Adoção Legal</title>
    </head>

    <body>
      <%- include('./partials/header') %>

      <main id="conteudo">
        <section id="Tema">Tema</section>
        <!--imagem do pefil e opções(coluna esquerda)-->
        <section id="content">
          <% usuario.forEach((usuario) => { %>
          <section class="perfil">
            <img src="../uploads/<%= usuario.fileName %>" alt="perfil-pet" />
            <ul>
              <li><%= usuario.nome %></li>
              <li><%= usuario.email %></li>
              <li><%= usuario.telefone %></li>
              <li><p><%= usuario.estado %></p></li>
              <li><p><%= usuario.cidade %></p></li>
              <li>opçõesDoPerfil6</li>
              <% }) %>
            </ul>

          </section>
          <% animal.forEach((animal) => { %>
          <% usuario.find((usuario)=> { %>
          <div id="card">
            <h2><%=usuario.nome%></h2>
            <div class="infoPerfil">
              <aside>
                <img
                  class="perfil-img"
                  src="../uploads/<%= usuario.fileName %> "
                  alt="perfil-pet"
                />
                <% }) %>
                <ul class="infoPerfil-pet">
                  <li><%= animal.pet %></li>
                  <li><%= animal.raca %></li>
                  <li><%= animal.pet %></li>
                  <li><%= animal.tamanho %></li>
                  <li><%= animal.genero %></li>
                  <li><%= animal.idade %></li>
                  
                </ul>
              </aside>
              <div class="photo-card">
                <img
                class="perfil-img"
                src="../uploads/<%= animal.fileName %> "
                alt="perfil-pet"
              />
            </div>
            <% }) %>
          </div>
        </div>

          <section id="customProfile">
            <ul>
                <li>opçõesDoPerfil1</li>
                <li>opçõesDoPerfil2</li>
                <li>opçõesDoPerfil3</li>
                <li>opçõesDoPerfil4</li>
                <li>opçõesDoPerfil5</li>
                <li><a href="/doando/pet">Doe seu pet!</a></li>
              </ul>
          </section>
        </section>
      </main>

      <%- include('./partials/footer') %>
      
    </body></html
></DOCTYPE>
